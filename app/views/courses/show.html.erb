<%= render "layouts/navbar" %>

<div id="main" class="container">
  <div class="row">

    <style>
      canvas{
        width: 90% !important;
        max-width: 410px;
        height: 90% !important;
        max-height: 390px;
      }
    </style>
    
    <div class="row course-info">
      <div class="col-sm-7">
        <h1 class="course-title" style="font-size:24pt"">
            <span class="claremont" style="font-size:30pt"><%= @course.code %></span>: <%= @course.title %>
        </h1>
        <h4 style="line-height: 130%;">
          <%= @course.instructor %> &nbsp;
          <div class="classinfo">
            <%= @course.credits %> credits &nbsp;
            <% unless @course.reviews.average(:rating).nil? %>
                <% for i in 0..4 %>
                    <% if @course.reviews.average(:rating)-i>=1 %>
                        <i class="fa fa-star"></i>
                    <% elsif @course.reviews.average(:rating)-i>=0.5 %>
                        <i class="fa fa-star-half"></i>
                    <% else %>
                        <i class="fa fa-star-o"></i>
                    <% end %>
                <% end %>
            <% else %>
                <% 5.times do %>
                    <i class="fa fa-star-o"></i>
                <% end %>
            <% end %>
            &nbsp;
            Grade: <span class="claremont">
                <% unless @course.reviews.pluck(:grade).nil? %>
                    <%= @course.reviews.pluck(:grade).sort[@course.reviews.length/2] %>
                <% end %>
            </span>
          </div>
        </h4>
        <p class="course-description">
          <%= @course.description %>
        </p>
        <h5>
          <strong>Terms:</strong>
          <% if !@course.term.nil? %>
              <% if @course.term.include? "fall" %>
                  <span class="dark-col">Fall</span>
              <% else %>
                  <span class="light-col">Fall</span>
              <% end %>
              <% if @course.term.include? "spring" %>
                  <span class="dark-col">Spring</span>
              <% else %>
                  <span class="light-col">Spring</span>
              <% end %>
          <% else %>
              <span class="light-col">Fall</span>
              <span class="light-col">Spring</span>
          <% end %>
        </h5>
      </div>
      <div class="col-sm-5">
        <%= column_chart @course.reviews.group(:grade).count, colors: ["#981B32"] %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-7">
        <div id="recent_reviews">
          <h3 class="recent-reviews-header">Most recent student reviews</h3>
          <%= render @course.reviews %>
        </div>
        <% if @course.reviews.count < 1 %>
            <p>Be the first to review this course:</p>
        <% end %>
        <div id="reviews_form">
            <%= render 'reviews/form' %>
        </div>
      </div>
    </div>
  </div>
</div>
