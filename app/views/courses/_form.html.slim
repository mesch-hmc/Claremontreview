= form_for(@course) do |f|
  - if @course.errors.any?
    #error_explanation
      h2
        = pluralize(@course.errors.count, "error")
        | prohibited this course from being saved:
      ul
        - @course.errors.full_messages.each do |message|
          li= message
  .field
    = f.label :code
    br/
    = f.text_area :code
  .field
    = f.label :title
    br/
    = f.text_area :title
  .field
    = f.label :instructor
    br/
    = f.text_area :instructor
  .field
    = f.label :credits
    br/
    = f.text_field :credits
  .field
    = f.label :description
    br/
    = f.text_area :description
  .field
    = f.label :requirements
    br/
    = f.text_area :requirements
  .field
    = f.label :term
    br/
    = f.text_area :term
  .actions
    = f.submit
