  .row
    br
    .order
      a.btn.primary href='/my_reviews?recents=false' Popular
      | |
      a.btn.primary href='/my_reviews?recents=true' Recent
    - @reviews.each do |review|
      br
      a href=course_path(review.course)
        h4 =review.course.full_title
      p =render review
      br
      hr

