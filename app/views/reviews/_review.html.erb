<div class="recent-review">
    <div class="review-rating-grade">
        <% review.rating.times do %>
            <i class="fa fa-star"></i>
        <% end %>
        <% (5-review.rating).times do %>
            <i class="fa fa-star-o"></i>
        <% end %>
        &nbsp;
        <%= review.grade %>
    </div>
    <p class="review-date">Published <%= time_ago_in_words(review.created_at) %> ago</p>
    <p class="review-info"><%= review.info %></p>
    <p class="helpful-review-text"><%= review.review_text %></p>
</div>
