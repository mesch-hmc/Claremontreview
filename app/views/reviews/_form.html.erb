<%= form_for([@course, @course.reviews.build]) do |f| %>
    <p>
       <%= f.label :rating %> <br>
       <%= f.number_field :rating, in: 1..5, step: 1 %>
    </p>

    <p>
    <%= f.label :grade %> <br>
       <%= f.text_field :grade, placeholder: 'e.g. B' %>
    </p>

    <p>
       <%= f.label :info %> <br>
       <%= f.text_field :info, placeholder: "Taken Fall 2015 | Professor: Charles Xavier" %>
    </p>

    <p>
       <%= f.label :review_text %> <br>
       <%= f.text_area :review_text, placeholder: 'Write review here...' %>
    </p>

    <br>
    <p> <%= f.submit %> </p>
<% end %>
