<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Rank</th>
      <th>Rating</th>
      <th>Date</th>
      <th>Info</th>
      <th>Review text</th>
      <th>Course code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.rank %></td>
        <td><%= review.rating %></td>
        <td><%= review.date %></td>
        <td><%= review.info %></td>
        <td><%= review.review_text %></td>
        <td><%= review.course_code %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
